<UserControl x:Class="WpfUiControls.Views.ExtendedSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUiControls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock/>
        <Slider 
            Grid.Column="1" 
            SmallChange="{Binding SmallChange}"
            LargeChange="{Binding LargeChange}"
            Maximum="{Binding MaxValue}"
            Minimum="{Binding MinValue}"
            Value="{Binding Value}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"/>
        <local:NumericUpDownControl
            Grid.Column="2"
            DataContext="{Binding NumericViewModel}"
            Width="{Binding NumericControlWidth}"
            Margin="10, 3, 3, 3"/>
    </Grid>
</UserControl>
